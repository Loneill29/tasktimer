<div class="row">
  <div id="new-item-form" >
    <%= form_for [@user, @item], remote: true do |f| %>
      <div class="form-group">
        <% f.label :name %>
        <%= f.text_field :name, class: 'form-control', placeholder: "Enter new item" %>
      </div>
      <div class="form-group">
        <%= f.submit "Save", class: 'btn btn-default' %>
      </div>
    <% end %>
  </div>
</div>
